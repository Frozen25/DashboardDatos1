package buscador;
public class BusBinario {
	  int[] data;
	  int size;

	    public boolean busquedaBinaria(int[] data ,int key) 
	    {
	         int min = 0;
	         int max = data.length-1;
	          
	         while(max >= min) {
	             int medio = (min + max) / 2;
	             if(data[medio] == key) {
	                return true;
	             }
	             if(data[medio] < key) {
	                 min = medio + 1;
	             }
	             if(data[medio] > key) {
	                 max = medio - 1;
	             }
	        }
	       return false;
	   }

	    
	    
	    public static void main(String arg[]){
	    	int[] arreglo = {1,2,3,4,5,6,7,8,9};
	    	BusBinario busque = new BusBinario();
	    	System.out.println(busque.busquedaBinaria(arreglo,2));
	    	System.out.println(busque.busquedaBinaria(arreglo,10));
	    }
